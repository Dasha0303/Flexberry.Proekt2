<h3 class="ui header">{{t "forms.i-i-s-proekt2-отчёт-об-оценке-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt2-отчёт-об-оценке-e.датаОтчёта-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаОтчёта
      class=(if (v-get validationModel "датаОтчёта" "isInvalid") "error")
      data-test-i-i-s-proekt2-отчёт-об-оценке-e-датаОтчёта=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаОтчёта" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt2-отчёт-об-оценке-e.сотрудники-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудники
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудники"
      projection="СотрудникиL"
      title=(t "forms.i-i-s-proekt2-отчёт-об-оценке-e.сотрудники-caption")
      readonly=readonly
      componentName="сотрудникиLookup"
      class=(if (v-get validationModel "сотрудники" "isInvalid") "error")
      data-test-i-i-s-proekt2-отчёт-об-оценке-e-сотрудники=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудники" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.сотрудники.должность
      class=(if (v-get validationModel.сотрудники "должность" "isInvalid") "error")
      label=(t "forms.i-i-s-proekt2-отчёт-об-оценке-e.сотрудники.должность-caption")
      data-test-i-i-s-proekt2-отчёт-об-оценке-e-сотрудники-должность=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.сотрудники "должность" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-proekt2-отчёт-об-оценке-e.оценкаИнфа-caption"}}</label>
    {{flexberry-groupedit
      componentName="оценкаИнфаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.оценкаИнфа
      content=model.оценкаИнфа
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "оценкаИнфа" "isInvalid") "error")
      data-test-i-i-s-proekt2-отчёт-об-оценке-e-оценкаИнфа=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "оценкаИнфа" "message")}}
  </div>
</form>
